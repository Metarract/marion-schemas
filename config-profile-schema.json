{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/Metarract/marion-schemas/master/config-profile-schema.json",
  "title": "Marion Config Profile Schema",
  "description": "Profile Container for Marion Configurations",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "description": "name of the profile",
      "type": "string"
    },
    "defaultDirectory": {
      "description": "default directory where this configuration will save files",
      "type": "string"
    },
    "configurations": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "minimum": 0
            },
            "name": {
              "type": "string"
            },
            "activationLevel": {
              "type": "number"
            },
            "baseImage": {
              "$ref": "#/$defs/image"
            },
            "activeImage": {
              "$ref": "#/$defs/image"
            }
          },
          "required": [
            "name",
            "activationLevel",
            "baseImage",
            "activeImage"
          ]
        }
      ],
      "minItems": 1
    }
  },
  "$defs": {
    "image": {
      "type": "object",
      "properties": {
        "animated": {
          "type": "boolean"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "path"
      ]
    }
  },
  "required": [
    "name",
    "configurations"
  ]
}